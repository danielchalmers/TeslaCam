<Window x:Class="TeslaCam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeslaCam"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:MainWindow}"
        Title="MainWindow"
        SizeToContent="Width">
    <Viewbox Stretch="Uniform">
        <Grid Width="1280" Height="960">
            <!--  Main feed covering the whole view  -->
            <MediaElement Name="MainMedia"
                          Source="{Binding MainSource}"
                          MediaFailed="MainMedia_MediaFailed"
                          MediaEnded="MainMedia_MediaEnded"
                          LoadedBehavior="Play"
                          Stretch="Uniform"
                          SpeedRatio="15" />

            <!--  TextBlock for error message  -->
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       FontSize="36"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap" />

            <!--  Overlay Grid for corner feeds  -->
            <Grid Background="Transparent" Margin="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Top Left feed  -->
                <local:CameraView Grid.Column="0"
                                  Grid.Row="0"
                                  SourceUri="{Binding TopLeftSource}"
                                  FeedName="Top Left" />

                <!--  Top Right feed  -->
                <local:CameraView Grid.Column="2"
                                  Grid.Row="0"
                                  SourceUri="{Binding TopRightSource}"
                                  FeedName="Top Right" />

                <!--  Bottom Left feed  -->
                <local:CameraView Grid.Column="0"
                                  Grid.Row="2"
                                  SourceUri="{Binding BottomLeftSource}"
                                  FeedName="Bottom Left" />

                <!--  Bottom Right feed  -->
                <local:CameraView Grid.Column="2"
                                  Grid.Row="2"
                                  SourceUri="{Binding BottomRightSource}"
                                  FeedName="Bottom Right" />
            </Grid>
        </Grid>
    </Viewbox>
</Window>
