<Window x:Class="TeslaCam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeslaCam"
        xmlns:ffme="clr-namespace:Unosquare.FFME;assembly=ffme.win"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:MainWindow}"
        Title="{x:Static local:App.Title}"
        MinWidth="1200"
        MinHeight="600"
        ContentRendered="Window_ContentRendered"
        Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Sidebar  -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Search box  -->
            <TextBox Grid.Row="0" Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Display all clips with thumbnails  -->
            <ListView Grid.Row="1"
                      ItemsSource="{Binding Clips}"
                      SelectedItem="{Binding CurrentClip, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Height="96">
                            <Image Source="{Binding ThumbnailPath}"
                                   Width="128"
                                   Stretch="Uniform" />

                            <TextBlock Text="{Binding Summary}"
                                       ToolTip="{Binding Summary}"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!--  Error message  -->
            <TextBlock Grid.Row="2"
                       Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       FontSize="16"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,8,0,0">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ErrorMessage}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!--  Folder picker  -->
            <Button Grid.Row="3"
                    Content="Select Folder"
                    HorizontalAlignment="Stretch"
                    Click="OpenFolderButton_Click"
                    Margin="0,8,0,0" />
        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Viewbox Grid.Row="0" Stretch="Uniform">
                <!--  Use HW3 (HW3 = 1280x960, HW4 = 2896x1876) as the base resolution and scale it for other aspect ratios.  -->
                <ffme:MediaElement x:Name="MediaElement"
                                   Height="960"
                                   LoadedBehavior="Play"
                                   SpeedRatio="6"
                                   MediaOpened="MediaElement_MediaOpened"
                                   MediaEnded="MediaElement_MediaEnded"
                                   MediaFailed="MediaElement_MediaFailed" />
            </Viewbox>

            <ProgressBar Grid.Row="1"
                         IsIndeterminate="True"
                         Visibility="{Binding IsProcessing, Converter={local:BooleanToVisibilityConverter}}" />
        </Grid>
    </Grid>
</Window>
