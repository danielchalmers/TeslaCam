<Window x:Class="TeslaCam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeslaCam"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:MainWindow}"
        Title="MainWindow"
        SizeToContent="WidthAndHeight">
    <Viewbox Stretch="Uniform">
        <Grid Width="1280" Height="960">
            <!-- Main MediaElement covering the whole window -->
            <MediaElement Name="MainMedia"
                          LoadedBehavior="Play"
                          Source="{Binding MainMediaSource}"
                          Stretch="Fill" />

            <!-- Bottom Left MediaElement -->
            <MediaElement Name="BottomLeftMedia"
                          Width="256" Height="192"
                          HorizontalAlignment="Left" VerticalAlignment="Bottom"
                          Margin="20"
                          LoadedBehavior="Play"
                          Source="{Binding BottomLeftMediaSource}" />

            <!-- Bottom Right MediaElement -->
            <MediaElement Name="BottomRightMedia"
                          Width="256" Height="192"
                          HorizontalAlignment="Right" VerticalAlignment="Bottom"
                          Margin="20"
                          LoadedBehavior="Play"
                          Source="{Binding BottomRightMediaSource}" />
        </Grid>
    </Viewbox>
</Window>
