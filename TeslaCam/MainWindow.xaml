<Window x:Class="TeslaCam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TeslaCam"
        Title="MainWindow">
    <Window.Resources>
        <Style x:Key="CornerMediaStyle" TargetType="MediaElement">
            <Setter Property="Height" Value="192" />
            <Setter Property="Width" Value="256" />
        </Style>
    </Window.Resources>

    <Viewbox Stretch="Uniform">
        <Grid Width="1280" Height="960">
            <!--  Main MediaElement covering the whole window  -->
            <MediaElement Name="MainMedia"
                          LoadedBehavior="Play"
                          Source="{Binding MainMediaSource}"
                          Stretch="Fill" />

            <!--  Overlay Grid for corner MediaElements  -->
            <Grid Background="Transparent" Margin="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Top Left MediaElement  -->
                <MediaElement Name="TopLeftMedia"
                              Grid.Column="0"
                              Grid.Row="0"
                              LoadedBehavior="Play"
                              Style="{StaticResource CornerMediaStyle}"
                              Source="{Binding TopLeftMediaSource}"
                              Stretch="Uniform" />

                <!--  Top Right MediaElement  -->
                <MediaElement Name="TopRightMedia"
                              Grid.Column="2"
                              Grid.Row="0"
                              LoadedBehavior="Play"
                              Style="{StaticResource CornerMediaStyle}"
                              Source="{Binding TopRightMediaSource}"
                              Stretch="Uniform" />

                <!--  Bottom Left MediaElement  -->
                <MediaElement Name="BottomLeftMedia"
                              Grid.Column="0"
                              Grid.Row="2"
                              LoadedBehavior="Play"
                              Style="{StaticResource CornerMediaStyle}"
                              Source="{Binding BottomLeftMediaSource}"
                              Stretch="Uniform" />

                <!--  Bottom Right MediaElement  -->
                <MediaElement Name="BottomRightMedia"
                              Grid.Column="2"
                              Grid.Row="2"
                              LoadedBehavior="Play"
                              Style="{StaticResource CornerMediaStyle}"
                              Source="{Binding BottomRightMediaSource}"
                              Stretch="Uniform" />
            </Grid>
        </Grid>

    </Viewbox>
</Window>
