<Window x:Class="TeslaCam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TeslaCam"
        Title="MainWindow"
        SizeToContent="Width">
    <Window.Resources>
        <!--  Default Style for MediaElement  -->
        <Style TargetType="MediaElement">
            <Setter Property="LoadedBehavior" Value="Play" />
            <Setter Property="Stretch" Value="Uniform" />
        </Style>

        <!--  Style for Corner MediaElements  -->
        <Style x:Key="CornerMediaStyle" TargetType="MediaElement">
            <Setter Property="Width" Value="256" />
        </Style>
    </Window.Resources>

    <Viewbox Stretch="Uniform">
        <Grid Width="1280" Height="960">
            <!--  Main feed covering the whole view  -->
            <MediaElement Name="MainMedia"
                          Source="{Binding MainMediaSource}"
                          MediaFailed="MainMedia_MediaFailed"
                          MediaEnded="MainMedia_MediaEnded"
                          SpeedRatio="10" />

            <!--  TextBlock for error message  -->
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       FontSize="36"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap" />

            <!--  Overlay Grid for corner feeds  -->
            <Grid Background="Transparent" Margin="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Top Left feed  -->
                <MediaElement Grid.Column="0"
                              Grid.Row="0"
                              Style="{StaticResource CornerMediaStyle}"
                              Source="{Binding TopLeftMediaSource}" />

                <!--  Top Right feed  -->
                <MediaElement Grid.Column="2"
                              Grid.Row="0"
                              Style="{StaticResource CornerMediaStyle}"
                              Source="{Binding TopRightMediaSource}" />

                <!--  Bottom Left feed  -->
                <MediaElement Grid.Column="0"
                              Grid.Row="2"
                              Style="{StaticResource CornerMediaStyle}"
                              Source="{Binding BottomLeftMediaSource}" />

                <!--  Bottom Right feed  -->
                <MediaElement Grid.Column="2"
                              Grid.Row="2"
                              Style="{StaticResource CornerMediaStyle}"
                              Source="{Binding BottomRightMediaSource}" />
            </Grid>
        </Grid>
    </Viewbox>
</Window>
