<Window x:Class="TeslaCam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TeslaCam"
        Title="MainWindow"
        SizeToContent="Width">
    <Window.Resources>
        <!--  Default Style for MediaElement  -->
        <Style TargetType="MediaElement">
            <Setter Property="LoadedBehavior" Value="Play" />
            <Setter Property="Stretch" Value="Uniform" />
        </Style>

        <!--  Style for Corner MediaElements  -->
        <Style x:Key="CornerMediaStyle" TargetType="MediaElement">
            <Setter Property="Width" Value="256" />
        </Style>
    </Window.Resources>

    <Viewbox Stretch="Uniform">
        <Grid Width="1280" Height="960">
            <!--  Main MediaElement covering the whole window  -->
            <MediaElement Name="MainMedia" Source="{Binding MainMediaSource}" />

            <!--  Overlay Grid for corner MediaElements  -->
            <Grid Background="Transparent" Margin="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Top Left MediaElement  -->
                <MediaElement Name="TopLeftMedia"
                              Grid.Column="0"
                              Grid.Row="0"
                              Style="{StaticResource CornerMediaStyle}"
                              Source="{Binding TopLeftMediaSource}" />

                <!--  Top Right MediaElement  -->
                <MediaElement Name="TopRightMedia"
                              Grid.Column="2"
                              Grid.Row="0"
                              Style="{StaticResource CornerMediaStyle}"
                              Source="{Binding TopRightMediaSource}" />

                <!--  Bottom Left MediaElement  -->
                <MediaElement Name="BottomLeftMedia"
                              Grid.Column="0"
                              Grid.Row="2"
                              Style="{StaticResource CornerMediaStyle}"
                              Source="{Binding BottomLeftMediaSource}" />

                <!--  Bottom Right MediaElement  -->
                <MediaElement Name="BottomRightMedia"
                              Grid.Column="2"
                              Grid.Row="2"
                              Style="{StaticResource CornerMediaStyle}"
                              Source="{Binding BottomRightMediaSource}" />
            </Grid>
        </Grid>
    </Viewbox>
</Window>
