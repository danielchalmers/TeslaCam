<Window x:Class="TeslaCam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeslaCam"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:MainWindow}"
        Title="MainWindow">
    <Window.Resources>
        <Style x:Key="CornerMediaStyle" TargetType="MediaElement">
            <Setter Property="Width" Value="256" />
            <Setter Property="Height" Value="192" />
        </Style>
    </Window.Resources>

    <Viewbox Stretch="Uniform">
        <Grid Width="1280" Height="960">
            <!-- Main MediaElement covering the whole window -->
            <MediaElement Name="MainMedia"
                  LoadedBehavior="Play"
                  Source="{Binding MainMediaSource}"
                  Stretch="Fill" />

            <!-- Overlay Grid for corner MediaElements -->
            <Grid Background="Transparent" Margin="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="256" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="256" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="192" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="192" />
                </Grid.RowDefinitions>

                <!-- Top Left MediaElement -->
                <MediaElement Name="TopLeftMedia"
                          Grid.Column="0" Grid.Row="0"
                          Style="{StaticResource CornerMediaStyle}"
                          LoadedBehavior="Play"
                          Source="{Binding TopLeftMediaSource}"
                          Stretch="Uniform" />

                <!-- Bottom Left MediaElement -->
                <MediaElement Name="BottomLeftMedia"
                          Grid.Column="0" Grid.Row="2"
                          Style="{StaticResource CornerMediaStyle}"
                          LoadedBehavior="Play"
                          Source="{Binding BottomLeftMediaSource}"
                          Stretch="Uniform" />

                <!-- Top Right MediaElement -->
                <MediaElement Name="TopRightMedia"
                          Grid.Column="2" Grid.Row="0"
                          Style="{StaticResource CornerMediaStyle}"
                          LoadedBehavior="Play"
                          Source="{Binding TopRightMediaSource}"
                          Stretch="Uniform" />

                <!-- Bottom Right MediaElement -->
                <MediaElement Name="BottomRightMedia"
                          Grid.Column="2" Grid.Row="2"
                          Style="{StaticResource CornerMediaStyle}"
                          LoadedBehavior="Play"
                          Source="{Binding BottomRightMediaSource}"
                          Stretch="Uniform" />
            </Grid>
        </Grid>

    </Viewbox>
</Window>
